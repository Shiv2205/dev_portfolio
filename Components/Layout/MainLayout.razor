@inherits LayoutComponentBase
@using System.Runtime.CompilerServices
@using SQLitePCL
@using dev_portfolio.Components.Data
@using dev_portfolio.Components.Models
@inject DeveloperProfileService profileService

<MudThemeProvider @bind-IsDarkMode="_isDarkMode" Theme="_myTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">@profile?.Name</MudText>
        <MudSpacer />
        <MudIconButton Icon="@(_isDarkMode ? Icons.Material.Filled.WbSunny : Icons.Material.Filled.Brightness4)" Color="Color.Inherit" OnClick="@ToggleDarkMode" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6" Class="px-4">Navigation</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
            <MudNavLink Href="about" Icon="@Icons.Material.Filled.Person">About</MudNavLink>
            <MudNavLink Href="projects" Icon="@Icons.Material.Filled.Work">Projects</MudNavLink>
            <MudNavLink Href="contact" Icon="@Icons.Material.Filled.Email">Contact</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = false;
    private bool _isDarkMode = true;
    private CustomTheme _myTheme = new CustomTheme();
    private DeveloperProfile? profile = null;

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private void ToggleDarkMode()
    {
        _isDarkMode = !_isDarkMode;
    }

    protected override async Task OnInitializedAsync() 
    {
        var profiles = await profileService.GetProfiles();
        if (profiles is not null) 
        {
            profile = profiles[0];
        }
    }
}
